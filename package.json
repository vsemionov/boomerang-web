{
  "name": "boomerang-web",
  "version": "0.2.10",
  "description": "Boomerang front-end",
  "author": "Victor Semionov <vsemionov@gmail.com>",
  "private": true,
  "scripts": {
    "build": "run-s build:**",
    "build:js": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "build:bootstrap": "cpx node_modules/bootstrap/dist/** www/bootstrap",
    "build:bootstrap-vue": "cpx node_modules/bootstrap-vue/dist/bootstrap-vue.css www/bootstrap-vue",
    "build:bootstrap-social": "cpx node_modules/bootstrap-social/bootstrap-social.css www/bootstrap-social",
    "build:font-awesome": "cpx node_modules/font-awesome/{css,fonts}/** www/font-awesome",

    "start": "cross-env NODE_ENV=development webpack-dev-server --open --hot",

    "postinstall": "npm run build"
  },
  "dependencies": {
    "vue": "2.4.4",
    "vue-router": "2.7.0",

    "raven-js": "3.17.0",

    "bootstrap": "4.0.0-beta",
    "bootstrap-vue": "1.0.0-beta.7",

    "bootstrap-social": "5.1.1",
    "font-awesome": "4.7.0",

    "axios": "0.16.2",
    "vue-axios": "2.0.2",
    "jwt-decode": "2.2.0",

    "npm-run-all": "4.1.1",
    "cpx": "1.5.0",

    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-preset-env": "1.6.0",
    "cross-env": "5.0.5",
    "css-loader": "0.28.7",
    "style-loader": "0.18.2",
    "file-loader": "0.11.2",
    "vue-loader": "13.0.4",
    "vue-template-compiler": "2.4.4",
    "webpack": "3.6.0",
    "webpack-dev-server": "2.8.2"
  },
  "devDependencies": {
  },
  "engines": {
    "node": "6.11.3"
  }
}
